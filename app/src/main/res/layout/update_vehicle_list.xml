<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp">


    <TextView
        android:id="@+id/et_vehicleno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:background="@drawable/bg_cream_white_full_rounded"
        android:drawableStart="@drawable/ic_vehicle_profile"
        android:drawableEnd="@drawable/ic_edit"
        android:drawablePadding="10dp"
        android:gravity="center|start"
        android:hint="Vehicle not found"
        android:padding="10dp"
        android:textColor="#000000"
        android:textColorHint="#CCCCCC"
        app:drawableTint="@color/iconBlack"
        tools:ignore="MissingConstraints" />

    <LinearLayout

        android:id="@+id/ll_up_vehicle_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/et_vehicleno">


        <Button
            android:id="@+id/btn_upVehicleNo"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:backgroundTint="@color/cardOrangeColor"
            android:text="Update"
            android:textColor="@color/colorWhite"
            tools:ignore="DuplicateIds" />

        <Button
            android:id="@+id/btn_cVehicleNo"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:backgroundTint="@color/cardInformationColor"
            android:text="cancel"
            tools:ignore="DuplicateIds" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>