<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="top"
    android:animateLayoutChanges="true"
    android:background="@drawable/bg_card_backgroundl_rounded"
    android:orientation="horizontal"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp">

    <ImageView
        android:id="@+id/alertTypeImageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="8dp"
        android:contentDescription="@string/alerts"
        android:padding="18dp"
        tools:background="@drawable/bg_alert_03"
        tools:src="@drawable/ic_warning" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewAlertType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:fontFamily="@font/dm_sans_medium"
            android:gravity="center_vertical"
            android:marqueeRepeatLimit="marquee_forever"
            android:layout_marginTop="2dp"
            android:minLines="1"
            android:singleLine="true"
            android:textColor="@color/colorWhite"
            android:textSize="14dp"
            android:textStyle="bold"
            tools:text="Panic \n\nPressedPressedPressedPressePressedPressedPressedessedPressed" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="top"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="2dp"
                android:contentDescription="@string/app_name"
                app:srcCompat="@drawable/ic_address_loc_12" />

            <com.romainpiel.shimmer.ShimmerTextView
                android:id="@+id/textViewVehicleAddress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:ellipsize="marquee"
                android:fontFamily="@font/dm_sans_regular"
                android:gravity="top"
                app:reflectionColor="@color/colorDarkShimmer"
                android:lines="3"
                android:marqueeRepeatLimit="marquee_forever"
                android:maxLines="3"
                android:scrollbars="none"
                android:scrollHorizontally="false"
                android:textColor="@color/creamWhite"
                android:textSize="12sp"
                tools:text="HPG, Kasargod-Kannur-Calicut Highway, Orcha, Neeleshwaram, Hosdurg, Kasaragod, Kerala, 670314, India" />

            <TextView
                android:id="@+id/textViewAlertDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="5dp"
                android:drawablePadding="2dp"
                android:fontFamily="@font/dm_sans_regular"
                android:gravity="center"
                android:textColor="@color/creamWhite"
                android:textSize="12dp"
                app:drawableStartCompat="@drawable/ic_time"
                tools:text="10:37 PM" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>