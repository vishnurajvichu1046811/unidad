<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/bg_card_backgroundl_rounded"
    android:foreground="?android:attr/selectableItemBackground"
    android:gravity="center_vertical"
    android:animateLayoutChanges="true"
    android:orientation="horizontal"
    android:padding="10dp">

    <ImageView
        android:id="@+id/imageViewVehicleType"
        android:layout_width="60dp"
        android:layout_height="45dp"
        android:background="@drawable/bg_blue_smallrounded"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop"
        tools:srcCompat="@drawable/ic_vehicle_truck" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="4dp"
        android:layout_weight="1.0"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewVehicleRegNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dm_sans_bold"
            android:lines="1"
            android:textColor="@color/colorWhite"
            android:textSize="14sp"
            tools:text="KL 33 - EE - 5544" />

        <LinearLayout
            android:id="@+id/alert_type_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewAlerts01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_alert_01"
                android:drawablePadding="2dp"
                android:fontFamily="@font/dm_sans_regular"
                android:gravity="center"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:textColor="@color/colorWhite"
                android:textSize="13dp"
                android:visibility="gone"
                app:drawableStartCompat="@drawable/ic_main_power_alert_12dp"
                tools:text="999+"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/textViewAlerts02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:background="@drawable/bg_alert_02"
                android:drawablePadding="2dp"
                android:fontFamily="@font/dm_sans_regular"
                android:gravity="center"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:textColor="@color/colorWhite"
                android:textSize="13dp"
                android:visibility="gone"
                app:drawableStartCompat="@drawable/ic_wire_cut_alert_12dp"
                tools:text="999+"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/textViewAlerts03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:background="@drawable/bg_alert_03"
                android:drawablePadding="2dp"
                android:fontFamily="@font/dm_sans_regular"
                android:gravity="center"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:textColor="@color/colorWhite"
                android:textSize="13dp"
                android:visibility="gone"
                app:drawableStartCompat="@drawable/ic_warning_12dp"
                tools:text="999+"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/textViewAlerts04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:background="@drawable/bg_alert_04"
                android:drawablePadding="2dp"
                android:fontFamily="@font/dm_sans_regular"
                android:gravity="center"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:textColor="@color/colorWhite"
                android:textSize="13dp"
                android:visibility="gone"
                app:drawableStartCompat="@drawable/ic_alert_speed"
                tools:text="999+"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/textOther"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:background="@drawable/bg_alert_05"
                android:drawablePadding="2dp"
                android:fontFamily="@font/dm_sans_regular"
                android:gravity="center"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:textColor="@color/iconBlack"
                android:textSize="13dp"
                android:visibility="gone"
                app:drawableStartCompat="@drawable/ic_warning_black_12dp"
                tools:visibility="visible" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/textViewAlertTotal"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/bg_circle_dark_yellowish"
        android:fontFamily="@font/dm_sans_bold"
        android:gravity="center"
        android:padding="5dp"
        android:textColor="@color/colorWhite"
        android:textSize="12dp"
        android:textStyle="bold"
        android:visibility="gone"
        tools:text="99+"
        tools:visibility="visible" />

</LinearLayout>
